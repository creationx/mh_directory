<T3DataStructure>
<meta>
<langDisable>1</langDisable>
</meta>
<sheets>
<sDEF>
<ROOT>
<TCEforms>
<sheetTitle>LLL:EXT:mh_directory/Resources/Private/Language/locallang_mod.xlf:flexforms_tab.settings</sheetTitle>
</TCEforms>
<type>array</type>
<el>

    <switchableControllerActions>
        <TCEforms>
            <label>LLL:EXT:mh_directory/Resources/Private/Language/locallang_mod.xlf:flexform_view</label>
            <onChange>reload</onChange>
            <config>
                <type>select</type>
                <items type="array">
                    <numIndex index="1" type="array">
                        <numIndex index="0">3-Way-View</numIndex>
                        <numIndex index="1">List->index</numIndex>
                    </numIndex>
                    <numIndex index="2" type="array">
                        <numIndex index="0">All</numIndex>
                        <numIndex index="1">All->index;All->detail;List->out;List->mail</numIndex>
                    </numIndex>
                    <numIndex index="3" type="array">
                        <numIndex index="0">Alphabetical</numIndex>
                        <numIndex index="1">Alphabetical->index;Alphabetical->detail;List->out;List->mail</numIndex>
                    </numIndex>
                    <numIndex index="4" type="array">
                        <numIndex index="0">Categories</numIndex>
                        <numIndex index="1">Category->index;Category->detail;List->out;List->mail</numIndex>
                    </numIndex>
                </items>
            </config>
        </TCEforms>
    </switchableControllerActions>

    <!-- Category -->
    <settings.categories>
        <TCEforms>
            <label>LLL:EXT:mh_directory/Resources/Private/Language/locallang_mod.xlf:flexform_category</label>
            <config>
                <type>select</type>
                <renderMode>tree</renderMode>
                <treeConfig>
                    <parentField>parent</parentField>
                    <appearance>
                        <expandAll>TRUE</expandAll>
                        <showHeader>TRUE</showHeader>
                    </appearance>
                </treeConfig>
                <foreign_table>sys_category</foreign_table>
                <foreign_table_where> AND sys_category.sys_language_uid IN (-1, 0) ORDER BY sys_category.title ASC</foreign_table_where>
                <size>10</size>
                <autoSizeMax>20</autoSizeMax>
                <minitems>0</minitems>
                <maxitems>20</maxitems>
            </config>
        </TCEforms>
    </settings.categories>

</el>
</ROOT>
</sDEF>
</sheets>
</T3DataStructure>